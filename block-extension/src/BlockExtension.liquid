{%- if flavor contains "react" -%}
import {
  reactExtension,
  useApi,
  AdminBlock,
} from '@shopify/ui-extensions-react/admin';

// The target used here must match the target used in the extension's toml file (./shopify.ui.extension.toml)
{% if flavor contains "typescript" %}
export default reactExtension<any>('admin.product.item.block', () => <App />);
{% else %}
export default reactExtension('admin.product.item.block', () => <App />);
{% endif %}
function App() {
  {% if flavor contains "typescript" %}
  const {extensionPoint, i18n} = useApi() as any;
  {% else %}
  const {extensionPoint, i18n} = useApi();
  {% endif %}
  return (
    <AdminBlock title="{{ name }}" subtitle="3 items">
      {i18n.translate('welcome', {extensionPoint})}
    </AdminBlock>
  );
}

{%- else -%}
import { extend, AdminBlock } from "@shopify/ui-extensions/admin";

extend("admin.product.item.action", (root, { extensionPoint, i18n }) => {
  root.appendChild(
    root.createComponent(
      AdminBlock,
      { title: "{{ name }}", subtitle: "3 items" },
      i18n.translate('welcome', {extensionPoint})
    )
  );
});
{%- endif -%}

{%- if flavor contains "preact" -%}
api_version = "2025-10"
{% else %}
api_version = "2025-07"
{% endif %}
[[extensions]]
type = "ui_extension"
name = "{{ name }}"
{% if uid %}uid = "{{ uid }}"{% endif %}
handle = "{{ handle }}"
description = "A {{ flavor }} POS UI extension"

# module: path to the file that contains your extensionâ€™s source code
# target: string that describes where your extension appears in POS
[[extensions.targeting]]
module = "./src/Action.{{ srcFileExtension }}"
target = "pos.product-details.action.render"

[[extensions.targeting]]
module = "./src/Block.{{ srcFileExtension }}"
target = "pos.product-details.block.render"

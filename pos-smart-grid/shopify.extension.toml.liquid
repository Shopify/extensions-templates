{%- if flavor contains "preact" -%}
api_version = "2025-10"
{% else %}
api_version = "2025-07"
{% endif %}
[[extensions]]
type = "ui_extension"
# Change the merchant-facing name of the extension in locales/en.default.json
name = "t:name"
{% if uid %}uid = "{{ uid }}"{% endif %}
handle = "{{ handle }}"
description = "A {{ flavor }} POS UI extension"

# module: file that contains your extensionâ€™s source code
# target: location where your extension appears in POS
[[extensions.targeting]]
module = "./src/Tile.{{ srcFileExtension }}"
target = "pos.home.tile.render"

[[extensions.targeting]]
module = "./src/Modal.{{ srcFileExtension }}"
target = "pos.home.modal.render"

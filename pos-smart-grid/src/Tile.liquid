{%- if flavor contains "preact" -%}
import {render} from 'preact';

export default async () => {
  render(<Extension />, document.body);
}

function Extension() {
  const {i18n} = shopify;
  
  return (
    <s-tile
      heading={i18n.translate('tile_heading')}
      subheading={i18n.translate('tile_subheading', {flavor: '{{flavor}}'})}
      onClick={() => shopify.action.presentModal()}
    />
  );
}

{%- elsif flavor contains "react" -%}
import { Tile, reactExtension, useApi } from '@shopify/ui-extensions-react/point-of-sale'

const TileComponent = () => {
  const api = useApi()
  return (
    <Tile
      title="My app"
      subtitle="SmartGrid {{flavor}} Extension"
      onPress={() => {
        api.action.presentModal()
      }}
      enabled
    />
  )
}

export default reactExtension('pos.home.tile.render', () => {
  return <TileComponent />
})

{%- else -%}
import {extension, Tile} from '@shopify/ui-extensions/point-of-sale'

export default extension('pos.home.tile.render', (root, api) => {
    const tile = root.createComponent(Tile, {
        title: api.i18n.translate('tile_heading'),
        subtitle: api.i18n.translate('tile_subheading', {flavor: '{{flavor}}'}),
        onPress: () => api.action.presentModal(),
        enabled: true
    });

    root.append(tile);
});

{%- endif -%}

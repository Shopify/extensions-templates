const Modal = () => {
  const {draftOrder} = shopify;
  return (
    <s-pos-navigator>
      <s-pos-screen name="DraftOrderDetailsAction" title="Draft Order Details Action">
        <s-pos-scroll-view>
          <s-pos-text>{`Draft Order ID: ${draftOrder.id}`}</s-pos-text>
        </s-pos-scroll-view>
      </s-pos-screen>
    </s-pos-navigator>
  );
};


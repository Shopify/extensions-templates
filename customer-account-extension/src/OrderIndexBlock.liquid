{%- if flavor contains "react" -%}
import { Banner, reactExtension, useApi } from '@shopify/ui-extensions-react/customer-account';

export default reactExtension(
  "customer-account.order-index.block.render",
  () => <OrderIndexBlock />
);

function OrderIndexBlock() {
  const { i18n, extension } = useApi();

  return (
    <Banner>{i18n.translate('welcome', {target: extension.target})}</Banner>
  );
}

{%- else -%}
import { extension, Banner } from '@shopify/ui-extensions/customer-account';

export default extension('customer-account.order-index.block.render', (root, api) => {
  const { i18n, extension } = api;

  root.appendChild(
    root.createComponent(
      Banner,
      {},
      i18n.translate('welcome', {target: extension.target})
    )
  );
});
{%- endif -%}

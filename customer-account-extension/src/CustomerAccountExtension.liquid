{%- if flavor contains "react" -%}
  import React from 'react';
  import { Banner, reactExtension, useTranslate } from '@shopify/ui-extensions-react/customer-account';

  export default reactExtension(
    'customer-account.dynamic.render',
     () => <CustomerAccountExtension />
  );

  function CustomerAccountExtension() {
    const translate = useTranslate();

    return (
      <Banner title='{{ name }}'>
        {translate('welcome')}
      </Banner>
    );
  }

  {%- else -%}
  import { extension, Banner } from '@shopify/ui-extensions/customer-account';

  export default extension('customer-account.dynamic.render', (root, api) => {
    const { i18n } = api;

    root.appendChild(
      root.createComponent(
        Banner,
        { title: '{{ name }}' },
        i18n.translate('welcome')
      )
    );
  });
  {%- endif -%}

api_version = "unstable"

[[extensions]]
name = "t:name"
handle = "action-extension"
type = "ui_extension"
{% if uid %}uid = "{{ uid }}"{% endif %}

# Only 1 target can be specified for each Admin action condition extension
[[extensions.targeting]]
module = "./src/ActionExtension.tsx"
# The target used here must match the target used in the module file (./src/ActionExtension.{{ srcFileExtension }})
target = "admin.product-details.action.render" 

[extensions.targeting.condition]
# This is a reference to the handle of the data_extension below
handle = "action-condition-extension"

[[extensions]]
handle = "action-condition-extension"
type = "data_extension"

[[extensions.targeting]]
module = "./src/ShouldRender.ts"
# The target used here must match the target used in the module file (./src/ShouldRender.{{ srcFileExtension }})
target = "admin.product-details.action.should-render"



{%- if flavor contains "preact" -%}
api_version = "2025-10"
{% else %}
api_version = "2025-04"
{% endif -%}

[[extensions]]
# change the merchant-facing name of the extension in locales/en.default.json
name = "t:name"
# your validation function's shopify.extension.toml will require a reference
# within [extensions.ui] to this handle:
#
#   [extensions.ui]
#   handle = "{{ handle }}"
handle = "{{ handle }}"
type = "ui_extension"
{% if uid %}uid = "{{ uid }}"{% endif %}

[[extensions.targeting]]
module = "./src/ValidationSettings.{{ srcFileExtension }}"
target = "admin.settings.validation.render"


